{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "hardhat"]
  },
  "include": [
    "./hardhat.config.ts",
    "./script/**/*",
    "./scripts/**/*",
    "./src/**/*",
    "./test/**/*"
  ]
}
